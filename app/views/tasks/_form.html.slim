form ng-controller='TaskFormController' name='task_form'
  .row
    .col-lg-6
      =form_group(label: t('simple_form.labels.task.project'), required: true) do
        .form-control[selectize2 required ng-model='task.project' selectize-options='projects' ng-change='projectChanged()']
    .col-lg-6
      =form_group(label: t('simple_form.labels.task.date'), required: true) do
        input.form-control[required ng-model='task.date' datepicker]


  =form_group(label: t('simple_form.labels.task.name'), required: true) do
    .form-control[selectize2 required ng-model='task.name' selectize-on-render='renderTask(item, escape)' selectize-options='tasks' create='true' on-load='findTasks(query)' ng-change='nameChanged()' include-model='true']

  .row
    .col-lg-6
      div ng-show='!compact_form'
        =form_group(label: t('simple_form.labels.task.url'))do
          input.form-control[ng-model='task.url']

        =form_group(label: t('simple_form.labels.task.type'), required: true) do
          .form-control[selectize2 required ng-model='task.task_type' selectize-options='task_types']

      =form_group(label: t('simple_form.labels.task.status'), required: true) do
        .form-control[selectize2 required ng-model='task.status' selectize-options='statuses']

      div ng-show='!edit'
        =form_group(label: t('simple_form.labels.task.real_time'), required: true) do
          input.form-control[required ng-model='task.duration']

    .col-lg-6
      =form_group(label: t('simple_form.labels.task.description')) do
        textarea.form-control[ng-model='task.description' rows=12]

  div ng-show='edit'
    =render 'time_entries'

  button.btn.btn-success type='button' ng-disabled='task_form.$invalid' ng-click='saveTask()'=t('common.buttons.save')
