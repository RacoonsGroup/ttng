<ul class="wiki_page_actions">
  <%= content_tag('li', link_to( wt( 'History' ), wiki_page_history_path(@page), class: 'btn btn-info')) if history_allowed? %>
  <%= content_tag('li', link_to( wt( 'Edit' ), wiki_page_edit_path(@page), class: 'btn btn-success' )) if edit_allowed? %>
  <%= content_tag('li', link_to( wt( 'Destroy' ), wiki_page_path(@page), :method => :delete, :data => {:confirm => wt( "Destroyed page can't be restored. Are you sure?" )}, class: 'btn btn-danger' )) if destroy_allowed? %>
</ul>
